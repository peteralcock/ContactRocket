<%= stylesheet_link_tag 'list' %>
<div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading c-list">
          <span class="title">Contacts</span>
          <ul class="pull-right c-controls">
            <li><a href="#cant-do-all-the-work-for-you" data-toggle="tooltip" data-placement="top" title="Add Contact"><i class="glyphicon glyphicon-plus"></i></a></li>
            <li><a href="#" class="hide-search" data-command="toggle-search" data-toggle="tooltip" data-placement="top" title="Toggle Search"><i class="fa fa-ellipsis-v"></i></a></li>
          </ul>
        </div>

        <div class="row" style="display: none;">
          <div class="col-xs-12">
            <div class="input-group c-search">
              <input type="text" class="form-control" id="contact-list-search">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search text-muted"></span></button>
                            </span>
            </div>
          </div>
        </div>

        <ul class="list-group" id="contact-list">
          <%= @contacts.each do |contact| %>
          <li class="list-group-item">
            <div class="col-xs-12 col-sm-3">
              <img src="<%= contact.image_url %>" alt="<%= contact.display_name %>" class="img-responsive img-circle" />
            </div>
            <div class="col-xs-12 col-sm-9">
              <span class="name"><%= contact.display_name %></span><br/>
              <span class="glyphicon glyphicon-map-marker text-muted c-info" data-toggle="tooltip" title="<%= contact.location %>"></span>
              <span class="visible-xs"> <span class="text-muted"><%= contact.display_name %></span><br/></span>
              <span class="glyphicon glyphicon-earphone text-muted c-info" data-toggle="tooltip" title="<%= contact.phone_number %>"></span>
              <span class="visible-xs"> <span class="text-muted"><%= contact.phone_number %></span><br/></span>
              <span class="fa fa-comments text-muted c-info" data-toggle="tooltip" title="scott.stevens@example.com"></span>
              <span class="visible-xs"> <span class="text-muted"><%= contact.email_address %></span><br/></span>
            </div>
            <div class="clearfix"></div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<!-- JavaScrip Search Plugin -->
<script src="//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"></script>
<%= javascript_include_tag 'list.js' %>
